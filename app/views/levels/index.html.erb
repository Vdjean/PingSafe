<div class="pingsafe-mobile-wrapper">
  <div class="pingsafe-levels-container">

    <div class="pingsafe-score-card">
      <div class="pingsafe-score-header">
        <div class="pingsafe-score-avatar">
          <% if current_user.pseudo.present? %>
            <span class="pingsafe-score-initial"><%= current_user.pseudo.first.upcase %></span>
          <% elsif current_user.first_name.present? %>
            <span class="pingsafe-score-initial"><%= current_user.first_name.first.upcase %></span>
          <% else %>
            <%= image_tag 'logo.png', alt: 'User', class: 'pingsafe-score-avatar-img' %>
          <% end %>
        </div>
        <h2 class="pingsafe-score-name">
          <%= current_user.pseudo.presence || current_user.first_name.presence || "User" %>
        </h2>
      </div>

      <div class="pingsafe-score-points">
        <div class="pingsafe-score-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
          </svg>
        </div>
        <div class="pingsafe-score-info">
          <p class="pingsafe-score-label">Your Score</p>
          <h1 class="pingsafe-score-value"><%= current_user.score || 0 %></h1>
          <p class="pingsafe-score-subtext">points earned</p>
        </div>
      </div>

      <% if @current_level %>
        <div class="pingsafe-current-level">
          <span class="pingsafe-level-badge pingsafe-level-current">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
            Current Level: <%= @current_level.level_name %>
          </span>
        </div>
      <% end %>
    </div>

    <div class="pingsafe-stats-section">
      <h3 class="pingsafe-section-subtitle">Statistics</h3>
      <div class="pingsafe-stats-grid-levels">
        <div class="pingsafe-stat-item">
          <div class="pingsafe-stat-icon pingsafe-stat-pings">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <div class="pingsafe-stat-content">
            <p class="pingsafe-stat-number"><%= current_user.pings.count %></p>
            <p class="pingsafe-stat-text">Total Pings</p>
          </div>
        </div>

        <div class="pingsafe-stat-item">
          <div class="pingsafe-stat-icon pingsafe-stat-rewards">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="8" r="6"/>
              <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/>
            </svg>
          </div>
          <div class="pingsafe-stat-content">
            <p class="pingsafe-stat-number"><%= current_user.user_rewards.count %></p>
            <p class="pingsafe-stat-text">Rewards</p>
          </div>
        </div>

        <div class="pingsafe-stat-item">
          <div class="pingsafe-stat-icon pingsafe-stat-rank">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 16v4a2 2 0 0 1-2 2h-4a2 2 0 0 1-2-2v-4"/>
              <path d="M7 8v4a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V8"/>
              <path d="M2 8h20"/>
              <path d="M4 3h16v5H4z"/>
            </svg>
          </div>
          <div class="pingsafe-stat-content">
            <p class="pingsafe-stat-number">#<%= @user_rank || "-" %></p>
            <p class="pingsafe-stat-text">Global Rank</p>
          </div>
        </div>
      </div>
    </div>

    <div class="pingsafe-levels-section">
      <h3 class="pingsafe-section-subtitle">All Levels</h3>

      <% if @levels.any? %>
        <div class="pingsafe-levels-list">
          <% @levels.order(:points).each_with_index do |level, index| %>
            <% user_has_level = current_user.user_levels.exists?(level_id: level.id) %>
            <% is_current = @current_level && @current_level.id == level.id %>

            <div class="pingsafe-level-card <%= 'pingsafe-level-unlocked' if user_has_level %> <%= 'pingsafe-level-active' if is_current %>">
              <div class="pingsafe-level-number">
                <% if user_has_level %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                <% else %>
                  <span><%= index + 1 %></span>
                <% end %>
              </div>

              <div class="pingsafe-level-info">
                <h4 class="pingsafe-level-name">Level <%= index + 1 %></h4>
                <p class="pingsafe-level-points">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                  <%= level.points %> points required
                </p>
                <% if is_current %>
                  <span class="pingsafe-level-current-badge">Current Level</span>
                <% end %>
              </div>

              <% if user_has_level %>
                <div class="pingsafe-level-status pingsafe-status-unlocked">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 9.9-1"/>
                  </svg>
                </div>
              <% else %>
                <div class="pingsafe-level-status pingsafe-status-locked">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                  </svg>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="pingsafe-levels-empty">
          <div class="pingsafe-empty-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
            </svg>
          </div>
          <p class="pingsafe-empty-text">No levels available yet</p>
        </div>
      <% end %>
    </div>

    <% if current_user.user_rewards.any? %>
      <div class="pingsafe-rewards-section">
        <h3 class="pingsafe-section-subtitle">Your Rewards</h3>
        <div class="pingsafe-rewards-grid">
          <% current_user.user_rewards.includes(:reward).each do |user_reward| %>
            <div class="pingsafe-reward-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="8" r="6"/>
                <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/>
              </svg>
              <span><%= user_reward.reward.reward_type %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>

  <div class="pingsafe-footer" data-map-footer-target="footer">
    <%= render "shared/footer" %>
  </div>
</div>
